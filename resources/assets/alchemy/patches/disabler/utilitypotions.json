[
  // Use this patch to remove certain utility potions. DO NOT CHANGE THE ORDER OF THE PATCHES AND DO NOT REMOVE ALL OF THEM

  // Reshape
  {
   "file": "alchemy:itemtypes/liquid/utilitypotionportion.json",
   "op": "remove",
   "path": "/variantgroups/0/states/5",
   "condition": {
      "when": "AllowReshapePotion",
      "isValue": "false"
    }
  },
  {
   "file": "alchemy:recipes/barrel/utilitypotionportion.json",
   "op": "remove",
   "path": "/0/ingredients/0/allowedVariants/5",
   "condition": {
      "when": "AllowReshapePotion",
      "isValue": "false"
    }
  },
  {
   "file": "alchemy:recipes/grid/ingredient/reshapebase.json",
   "op": "addmerge",
   "path": "/enabled",
   "value": false,
   "condition": {
      "when": "AllowReshapePotion",
      "isValue": "false"
    }
  },
  {
   "file": "alchemy:itemtypes/liquid/utilitypotionportion.json",
   "op": "replace",
   "path": "/attributesByType/*-reshape/handbook",
   "value": { "exclude": true },
   "condition": {
      "when": "AllowReshapePotion",
      "isValue": "false"
    }
  },
  {
   "file": "alchemy:itemtypes/ingredient/utilitypotionbase.json",
   "op": "remove",
   "path": "/variantgroups/0/states/5",
   "condition": {
      "when": "AllowReshapePotion",
